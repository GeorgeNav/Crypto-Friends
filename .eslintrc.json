{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "semi": [
      1,
      "never"
    ],
    "quotes": [
      1,
      "single"
    ],
    "indent": [
      1,
      2
    ],
    "no-unused-vars": "warn",
    "no-extra-parens": "warn",
    "react/prop-types": "warn",
    "space-before-blocks": [
      "warn",
      "always"
    ],
    "space-before-function-paren": [
      "warn",
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "never"
      }
    ],
    "arrow-spacing": [
      "warn",
      {
        "before": true,
        "after": true
      }
    ]
  }
}